<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.exameple.prueba1.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_margin="@android:dimen/app_icon_size"
        android:text="Entrar al sistema"
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="29dp" />

    <EditText
        android:id="@+id/txtusu"
        android:layout_width="368dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:text="Enviar"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/txtpass" />

    <EditText
        android:id="@+id/txtpass"
        android:layout_width="368dp"
        android:layout_height="46dp"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="numberPassword"
        app:layout_constraintTop_toBottomOf="@+id/txtusu"
        tools:layout_editor_absoluteX="8dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="368dp"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/puertasabiertas"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
